<div style="position:absolute; left:60%; top:150px;">

<h2>这是一个临时的注册页面~ 喵^o^</h2>

<% if resource_name == :student %>
  <p>注册学生 | <%= link_to "注册老师", new_teacher_registration_path %> | <%= link_to "注册管理员", new_admin_registration_path %></p>
<% elsif resource_name == :teacher %>
  <p><%= link_to "注册学生", new_student_registration_path %> | 注册老师 | <%= link_to "注册管理员", new_admin_registration_path %></p>
<% elsif resource_name == :admin %>
  <p><%= link_to "注册学生", new_student_registration_path %> | <%= link_to "注册老师", new_teacher_registration_path %> | 注册管理员</p>
<% end %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, "邮箱" %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password, "密码" %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, "确认密码" %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "注册" %></div>
<% end %>

<%= render "devise/shared/links" %>

</div>
