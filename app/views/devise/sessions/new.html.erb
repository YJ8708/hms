<div style="position:absolute; left:60%; top:150px;">

<h2>这是一个临时的登陆页面~ 喵^o^</h2>

<% if resource_name == :student %>
  <p>登陆学生 | <%= link_to "登陆老师", new_teacher_session_path %> | <%= link_to "登陆管理员", new_admin_session_path %></p>
<% elsif resource_name == :teacher %>
  <p><%= link_to "登陆学生", new_student_session_path %> | 登陆老师 | <%= link_to "登陆管理员", new_admin_session_path %></p>
<% elsif resource_name == :admin %>
  <p><%= link_to "登陆学生", new_student_session_path %> | <%= link_to "登陆老师", new_teacher_session_path %> | 登陆管理员</p>
<% end %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email, "邮箱" %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password, "密码" %><br />
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, "记住我" %></div>
  <% end -%>

  <div><%= f.submit "登陆" %></div>
<% end %>

<%= render "devise/shared/links" %>

</div>
